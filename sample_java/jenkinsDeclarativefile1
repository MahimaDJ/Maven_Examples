pipeline {
    agent any

    environment {
        
        PATH="/usr/share/maven/bin:$PATH"
    }
    stages {
        stage('Github checkout') {
            steps {
                git branch: 'main', credentialsId: 'MahimaGithub', url: 'https://github.com/MahimaDJ/devops-learning/'
                          }
        }
        
        stage ('Maven Build') {
           steps {
               sh "mvn clean package"
           }
        }
    }
}
